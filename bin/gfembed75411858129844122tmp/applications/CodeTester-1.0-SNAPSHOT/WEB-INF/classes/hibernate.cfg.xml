<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/testeur_de_code?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="Admin.hbm.xml"/>
    <mapping resource="Candidat.hbm.xml"/>
    <mapping resource="Categorie.hbm.xml"/>
    <mapping resource="Passage.hbm.xml"/>
    <mapping resource="Proposition.hbm.xml"/>
    <mapping resource="Question.hbm.xml"/>
    <mapping resource="Reponse.hbm.xml"/>
    <mapping resource="ReponseHisto.hbm.xml"/>
    <mapping resource="Rubrique.hbm.xml"/>
    <mapping resource="Test.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
